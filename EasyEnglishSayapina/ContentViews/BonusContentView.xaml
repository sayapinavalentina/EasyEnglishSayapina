<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="EasyEnglishSayapina.ContentViews.BonusContentView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Margin="15,0">
    <ContentView.Content>
        <StackLayout Spacing="15">
            <Frame
                Padding="0"
                BackgroundColor="{Binding Color}"
                BorderColor="#dbdcdc"
                CornerRadius="45"
                HasShadow="False"
                HeightRequest="90"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                WidthRequest="90">
                <Image
                    HeightRequest="60"
                    HorizontalOptions="Center"
                    Source="{Binding Icon}"
                    WidthRequest="60" />
            </Frame>

            <Label
                FontSize="20"
                HorizontalTextAlignment="Center"
                Text="{Binding Name}"
                TextColor="#aeaeae" />
        </StackLayout>
    </ContentView.Content>
</ContentView>
