<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="EasyEnglishSayapina.ContentViews.LessonGroupBonusContentView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:contentViews="clr-namespace:EasyEnglishSayapina.ContentViews">
    <ContentView.Content>
        <StackLayout>
            <BoxView Style="{StaticResource DivisorLine}" />

            <FlexLayout
                AlignItems="Center"
                BindableLayout.ItemsSource="{Binding Lessons}"
                Direction="Row"
                HeightRequest="180"
                JustifyContent="Center">
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <contentViews:BonusContentView />
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </FlexLayout>

            <BoxView Style="{StaticResource DivisorLine}" />
        </StackLayout>
    </ContentView.Content>
</ContentView>
